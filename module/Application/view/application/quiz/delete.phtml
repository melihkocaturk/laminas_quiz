            <?= $this->formHidden($form->get('user_id')->setValue($this->authHelper()->getId())) ?>

            <span class="form-text text-muted pb-2">
                <?= $this->translate('Are you sure you want to delete this quiz?') ?>
            </span>

            <div class="mb-3">
                <?= $this->formSubmit($form->get('delete_quiz')->setValue('Yes')) ?>
